<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_top_story">

    <fragment
        android:id="@+id/navigation_top_story"
        android:name="com.zelda.hackernewsandroid.ui.topstory.TopStoryFragment"
        android:label="Top Stories"
        tools:layout="@layout/fragment_top_story">
        <action
            android:id="@+id/action_navigation_top_story_to_commentFragment"
            app:destination="@id/commentFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.zelda.hackernewsandroid.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.zelda.hackernewsandroid.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/commentFragment"
        android:name="com.zelda.hackernewsandroid.ui.comment.CommentFragment"
        android:label="Comments"
        tools:layout="@layout/fragment_comment">
<!--        <argument-->
<!--            android:name="title"-->
<!--            app:argType="string" />-->

    </fragment>

</navigation>